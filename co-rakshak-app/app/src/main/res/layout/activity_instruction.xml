<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructionActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"
    >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nav_home"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_home"
        android:backgroundTint="@color/dark_cyan"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Continue\nAfter Reading\nthe INSTRUCTION"
        android:textSize="30sp"
        android:textColor="@color/dark_cyan"/>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_cyan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fill the form given in the next page appropriately"
            android:textSize="15sp"
         android:layout_marginStart="70dp"
            android:textColor="@color/dark_cyan"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_cyan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on confirm button onec all details of passanger are added"
            android:textSize="15sp"
            android:layout_marginStart="70dp"
            android:textColor="@color/dark_cyan"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_cyan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respective QR Code will be generated, Save the QR"
            android:textSize="15sp"
            android:layout_marginStart="70dp"
            android:textColor="@color/dark_cyan"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_cyan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add More passenger if needed"
            android:textSize="15sp"
            android:layout_marginStart="70dp"
            android:textColor="@color/dark_cyan"/>
    </RelativeLayout>
</LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_margin="35dp"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        android:background="@color/black"
        android:backgroundTint="@drawable/round_btn_selector">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Continue"
             android:textSize="20sp"
             android:textStyle="bold"
             android:textColor="@drawable/text_selector"
             android:layout_centerVertical="true"
             android:layout_marginStart="30dp"
             />
         <TextView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:background="@drawable/ic_back"
             android:layout_centerVertical="true"
             android:layout_alignParentEnd="true"
             android:layout_marginEnd="35dp"
             android:backgroundTint="@drawable/text_selector"/>
     </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>